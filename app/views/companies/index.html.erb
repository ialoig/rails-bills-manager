<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Companies</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <% flash.each do |key, value| %>
        <div class="panel panel-<%= key %>">
          <div class="panel-heading"><%= value %></div>
        </div>
      <% end %>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-company">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
            <tr class="odd gradeX">
              <td><%= company.name %></td>
              <td><%= company.category %></td>
              <td class="td-actions text-right">
                <button type="button" rel="tooltip" title="Show Company" class="btn btn-simple btn-link center">
                  <%= link_to company do %>
                  <i class="fa fa-eye"></i>
                  <% end %>
                </button>
                <button type="button" rel="tooltip" title="Edit Company" class="btn btn-simple btn-link center">
                  <%= link_to edit_company_path(company) do %>
                  <i class="fa fa-edit"></i>
                  <% end %>
                </button>
                
                <button type="button" rel="tooltip" title="Delete Company" class="btn btn-simple btn-link center">
                  <%= link_to company_path(company.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash"></i>
                  <% end %>
                </button>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <br>
    <%= link_to '+', new_company_path, class: "btn btn-outline btn-primary" %>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
  $(document).ready(function() {
    $('#dataTables-company').DataTable({
      responsive: true
    });
  });
</script>
