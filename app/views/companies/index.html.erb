<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Companies</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <% flash.each do |key, value| %>
        <div class="panel panel-<%= key %>">
          <div class="panel-heading"><%= value %></div>
        </div>
      <% end %>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-model">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th class="col-md-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% cache @companies do %>
              <% @companies.each do |company| %>
                <tr class="odd gradeX">
                  <% cache company do %>
                    <td><%= company.name %></td>
                    <td><%= company.category %></td>
                    <td class="td-actions text-right">
                      <button type="button" rel="tooltip" title="Show Company" class="btn btn-simple btn-link center">
                        <%= link_to company do %>
                          <i class="glyphicon glyphicon-eye-open"></i>
                        <% end %>
                      </button>
                      <button type="button" rel="tooltip" title="Edit Company" class="btn btn-simple btn-link center">
                        <%= link_to edit_company_path(company) do %>
                          <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      </button>
                      
                      <button type="button" rel="tooltip" title="Delete Company" class="btn btn-simple btn-link center">
                        <%= link_to company_path(company.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                      </button>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <br>
    <%= link_to '+', new_company_path, class: "btn btn-outline btn-primary" %>
  </div>
  <!-- /.col-lg-12 -->
</div>
