<div class="row">
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-body">
				
				<div class="row">
					<div class="col-lg-8">

						<%= simple_form_for @company do |f| %>
						<%= f.input :name, as: :string, required: true %>
						<%= f.input :category, as: :string, required: true, label: "Category" %>
						<%= f.button :submit, class: "btn btn-outline btn-primary" %>
						<% end %>

					</div>
				</div>

				<br>
				
				<div class="wall">
					<%= link_to 'Back', companies_path, class: "btn btn-default" %>
				</div>

			</div>
		</div>
	</div>
</div>