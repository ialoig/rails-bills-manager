<div class="wrapper wrapper-content animated fadeInRight">
  	<div class="row">
	    <div class="col-lg-8">
	      	<div class="ibox float-e-margins">
	        	<div class="ibox-title">
		          	<h5>New Company</h5>
		          	<div class="ibox-tools">
		            	<a class="collapse-link">
		              	<i class="fa fa-chevron-up"></i>
		            	</a>
		          	</div>
	        	</div>

		        <div class="ibox-content">
		        	<%= simple_form_for @company, wrapper: :horizontal_input_group_b4 do |f| %>

			        	<% if @company.errors.any? %>
			        		<div id="error_explanation">
				        		<h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>
				        		<ul>
				        			<% @company.errors.full_messages.each do |message| %>
				        			<li><%= message %></li>
				        			<% end %>
				        		</ul>
				        	</div>
				        	<div class="hr-line-dashed"></div>
			        	<% end %>

			        	<!-- Name -->
			        	<%= f.input :name, wrapper: :horizontal_input_group_b4, as: :string, label: "Name *", required: false, input_html: { maxlength: 60 } %>

			        	<!-- Category -->
			        	<%= f.input :category, wrapper: :horizontal_input_group_b4, as: :string, label: "Category", required: false %>

			        	<!-- Company -->
			        	<div class="form-group row" >
			        		<%= link_to 'Back', companies_path, class: "btn btn-white" %>
			        		<%= f.button :submit, class: "btn btn-primary" %>
			        	</div>

					<% end %>

				</div>
		    </div>
	    </div>
	</div>
</div>