<h1>Show Company</h1>
<div class="row">
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-8">
						<p id="notice"><%= notice %></p>
						<p>
							<strong>Name:</strong>
							<%= @company.name %>
						</p>
						<p>
							<strong>Category:</strong>
							<%= @company.category %>
						</p>

						<%= link_to 'Edit', edit_company_path(@company) %> |
						<%= link_to 'Back', companies_path %>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>