<div class="col-lg-12" id='amount_by_year'>
	<div class="ibox float-e-margins">
		<div class="ibox-title">
			<h5>Total Amount by month</h5>
			<div class="pull-right">
				<div class="btn-group">
					<%= link_to 'Last 24 month', bills_amount_by_year_charts_path(last_month: 24), remote: true, class: "btn btn-xs btn-white" %>
					<%= link_to 'Last 12 month', bills_amount_by_year_charts_path(last_month: 12), remote: true, class: "btn btn-xs btn-white active" %>
					<%= link_to 'Last 6 month', bills_amount_by_year_charts_path(last_month: 6), remote: true, class: "btn btn-xs btn-white" %>
				</div>
			</div>
		</div>
		<div class="ibox-content">
			<%= bills_amount_by_year(12) %>
		</div>
	</div>
</div>
