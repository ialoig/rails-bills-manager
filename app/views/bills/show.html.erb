<h1>Show Bill</h1>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-body">

        <div class="row">
          <div class="col-lg-8">
            <p id="notice">
              <%= notice %></p>
            <p>
              <strong>Company:</strong>
              <%= @bill.company.name %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @bill.description %>
            </p>

            <p>
              <strong>From:</strong>
              <%= @bill.period %>
            </p>

            <p>
              <strong>To:</strong>
              <%= @bill.end_period %>
            </p>

            <p>
              <strong>Amount:</strong>
              <%= @bill.amount %>
            </p>

            <p>
              <strong>Deadline:</strong>
              <%= @bill.deadline %>
            </p>

            <p>
              <strong>Paid:</strong>
              <%= @bill.paid %>
            </p>

            <p>
              <strong>Attachment:</strong>
              <br>
              <% @bill.attachments.each do |upload| %>
                <%= link_to upload.filename, rails_blob_path(upload, disposition: :attachment) %><br>
              <% end %>
            </p>

            <%= link_to 'Edit', edit_bill_path(@bill) %> |
            <%= link_to 'Back', bills_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
