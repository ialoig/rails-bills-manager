<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Bills</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p id="notice"><%= notice %></p>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>Company</th>
              <th>Name</th>
              <th>From</th>
              <th>To</th>
              <th>Amount</th>
              <th>Deadline</th>
              <th>Paid</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @bills.each do |bill| %>
            <tr class="odd gradeX">
              <td><%= bill.company.name %></td>
              <td><%= bill.name %></td>
              <td><%= bill.period.strftime("%d/%m/%Y") %></td>
              <td><%= bill.end_period.strftime("%d/%m/%Y") %></td>
              <td><%= bill.amount %></td>
              <td><%= bill.deadline.strftime("%d/%m/%Y") %></td>
              <td>
                <% if bill.paid? %>
                <%= content_tag :i, "", class: "fa-check-circle" %>
                <% else %>
                <%= content_tag :i, "", class: "fa-minus-circle" %>
                <% end %>
              </td>
              <td class="td-actions text-right">
                <button type="button" rel="tooltip" title="Show Bill" class="btn btn-simple btn-link center">
                  <%= link_to bill do %>
                  <i class="fas fa-eye"></i>
                  <% end %>
                </button>
                <button type="button" rel="tooltip" title="Edit Bill" class="btn btn-simple btn-link center">
                  <%= link_to edit_bill_path(bill) do %>
                  <i class="far fa-edit"></i>
                  <% end %>
                </button>
                
                <button type="button" rel="tooltip" title="Delete Bill" class="btn btn-simple btn-link center">
                  <%= link_to bill_path(bill.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="far fa-trash-alt"></i>
                  <% end %>
                </button>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <!-- /.table-responsive -->
        <div class="well">
          <%= link_to 'New Bill', new_bill_path, class: "btn btn-default btn-lg btn-block" %>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
  $(document).ready(function() {
    $('#dataTables-example').DataTable({
      responsive: true
    });
  });
</script>