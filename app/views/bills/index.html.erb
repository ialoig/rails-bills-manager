<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>From</th>
      <th>To</th>
      <th>Amount</th>
      <th>Deadline</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.company.name %></td>
        <td><%= bill.name %></td>
        <td><%= bill.period.strftime("%d/%m/%Y") %></td>
        <td><%= bill.end_period.strftime("%d/%m/%Y") %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.deadline.strftime("%d/%m/%Y") %></td>
        <td><%= bill.paid %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

