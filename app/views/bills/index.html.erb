<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Bills</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <% flash.each do |key, value| %>
        <div class="panel panel-<%= key %>">
          <div class="panel-heading"><%= value %></div>
        </div>
      <% end %>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-bills">
          <thead>
            <tr>
              <th>Company</th>
              <th>Name</th>
              <th>From</th>
              <th>To</th>
              <th>Amount</th>
              <th>Deadline</th>
              <th>Paid</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @bills.each do |bill| %>
            <tr class="odd gradeX">
              <td><%= bill.company.name %></td>
              <td><%= bill.name %></td>
              <td><%= format_period(bill.period) %></td>
              <td><%= format_period(bill.end_period) %></td>
              <td><%= number_to_euro (bill.amount) %></td>
              <td><%= format_period(bill.deadline) %></td>
              <td>
                <% if bill.paid? %>
                <%= content_tag :i, "", class: "fa fa-check" %>
                <% else %>
                <%= content_tag :i, "", class: "fa fa-minus" %>
                <% end %>
              </td>
              <td class="td-actions text-right">
                <button type="button" rel="tooltip" title="Show Bill" class="btn btn-simple btn-link center">
                  <%= link_to bill do %>
                  <i class="fa fa-eye"></i>
                  <% end %>
                </button>
                <button type="button" rel="tooltip" title="Edit Bill" class="btn btn-simple btn-link center">
                  <%= link_to edit_bill_path(bill) do %>
                  <i class="fa fa-edit"></i>
                  <% end %>
                </button>
                
                <button type="button" rel="tooltip" title="Delete Bill" class="btn btn-simple btn-link center">
                  <%= link_to bill_path(bill.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash"></i>
                  <% end %>
                </button>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <br>
    <%= link_to '+', new_bill_path, class: "btn btn-outline btn-primary" %>
  </div>
  <!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
  $(document).ready(function() {
    $('#dataTables-bills').DataTable({
      responsive: true
    });
  });
</script>