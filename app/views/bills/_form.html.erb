<%= simple_form_for @bill do |f| %>
  <%= f.association :company %>
  <%= f.input :name, as: :string, required: true %>
  <%= f.input :period, as: :string, required: true, :placeholder => 'Select From', input_html: { class: "daterange"},label: "From" %>
  <%= f.input :end_period, as: :string, required: true, :placeholder => 'Select To', input_html: { class: "daterange"}, label: "To" %>
  <%= f.input :amount, as: :string %>
  <%= f.input :deadline, as: :string, required: true, :placeholder => 'Select due date', input_html: { class: "daterange"}, label: "Deadline" %>
  <%= f.input :paid %>
  <%= f.button :submit %>
<% end %>

<br>
<div class="wall">
  <%= link_to 'Back', bills_path, class: "btn btn-default" %>
</div>

<script type="text/javascript">
	$('.daterange').datepicker({
		format: "dd-mm-yyyy",
		autoclose: true,
		todayHighlight: true
	});
</script>
